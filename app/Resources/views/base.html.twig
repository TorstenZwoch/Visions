{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Bootstrap -->
        <title>{% block title %}Welcome!{% endblock %} | Libetto</title>
        <meta name="description" content="">
        <meta name="author" content="">

        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->

        {% block stylesheets %}
            {% stylesheets
              filter='cssrewrite,yui_css'
              output='css/main.css'
              combine=true
              '../app/Resources/public/css/bootstrap.css' 
              '../app/Resources/public/css/bootstrap-responsive.min.css' 
              '../app/Resources/public/css/font-awesome.min.css'
              '../app/Resources/public/css/bootswatch.css'
              '../app/Resources/public/css/w2ui-1.2.min.css'
              '../app/Resources/public/css/main.css'
            %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body id="top" data-spy="scroll" data-target=".subnav" data-offset="0">
        <div class="container-fluid" style="width: auto;">
            <div class="pull-right">{{ locale_switcher() }}</div>        
        </div>
        <div class="container-fluid" style="width: auto;">
           &nbsp;    
        </div>            
        <div class="container-fluid">
            <!-- Navbar
            ================================================== -->
            <!--<section id="navbar">-->
            <div class="navbar navbar-inverse ">
                <div class="navbar-inner">
                    <div class="container-fluid" style="width: auto;">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
                        <a class="brand" href="{{ app.request.getBaseURL() }}" title="Libetto" alt="Libetto">Libetto</a>
                        <div class="nav-collapse">
                            <div class="nav-collapse collapse navbar-responsive-collapse pull-left">   
                                    {{ knp_menu_render('LibettoMaintenanceBundle:Builder:mainMenu', {'currentClass': 'active'}) }}
                                    {{ knp_menu_render('LibettoCustomerBundle:Builder:mainMenu', {'currentClass': 'active'}) }}
                                </div> 

                                <div class="nav-collapse collapse navbar-responsive-collapse pull-right">   
                                {{ knp_menu_render('LibettoUserBundle:Builder:mainMenu', {'currentClass': 'active'}) }}
                                    </div>                                
                                    <form class="navbar-search pull-right" action="">
                                        <input type="text" class="search-query span2" placeholder="{% trans %}default.form.placeholder.Search{% endtrans %}">
                                    </form>
                                </div><!-- /.nav-collapse -->
                            </div>
                        </div><!-- /navbar-inner -->
                    </div><!-- /navbar -->
                    
                    <!--</section>-->
        {% for flashMessage in app.session.flashbag.get('error') %}
                    <div class="alert alert-error">
                {{ flashMessage }}
                        </div>
        {% endfor %}  
        {% for flashMessage in app.session.flashbag.get('warning') %}
                        <div class="alert alert-warning">
                {{ flashMessage }}
                            </div>
        {% endfor %}  
        {% for flashMessage in app.session.flashbag.get('success') %}
                            <div class="alert alert-success">
                {{ flashMessage }}
                                </div>
        {% endfor %}  
        {% block body %}

        {% endblock %}
                                <br><br><br><br>

                                <!-- Footer
                                 ================================================== -->
                                <hr>

                                <footer id="footer">
                                    <p class="pull-right"><a href="#top">{% trans %}default.action.Back to top{% endtrans %}</a></p>
                                    <!--  <div class="links">
                                          <a href="">Link 1</a>
                                          <a href="">Link 2</a>
                                          <a href="">Link 3</a>
                                          </div>
                                          test -->
                                    </p>
                                </footer>

                            </div><!-- /container -->



                            <!-- javascript
                            ================================================== -->
            {% javascripts 
              filter='yui_js'
              output='js/main.js'
              combine=true
              "../app/Resources/public/js/jquery.min.js" 
              "../app/Resources/public/js/jquery.smooth-scroll.min.js"
              "../app/Resources/public/js/bootstrap.min.js" 
              "../app/Resources/public/js/bootswatch.js"
              "../app/Resources/public/js/w2ui-1.2.min.js"
            %}
                            <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}


                        </body>
                    </html>