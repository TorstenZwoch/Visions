{# app/Resources/views/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Bootstrap -->
        <title>{% block title %}Welcome!{% endblock %} | M-Fakt Online</title>
        
        {% stylesheets '../app/Resources/public/css/bootstrap.min.css' '../app/Resources/public/css/bootstrap-responsive.min.css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}{% endblock %}

            {% javascripts "../app/Resources/public/js/jquery.min.js" "../app/Resources/public/js/bootstrap.min.js" "../app/Resources/public/js/angular.min.js" %}
            <script src="{{ asset_url }}" type="text/javascript"></script>
            {% endjavascripts %}
    </body>
</html>
