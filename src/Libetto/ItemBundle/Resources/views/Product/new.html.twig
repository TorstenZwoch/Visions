{% extends '::base.html.twig' %}
{% block title %}{% trans %}item.product.title.Creation{% endtrans %}{% endblock title  %}
{% block body -%}

<h1>{% trans %}item.product.title.Creation{% endtrans %}</h1>

<form action="{{ path('product_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">
            <li class="icon-save"></li> {% trans %}item.product.action.Save{% endtrans %}
        </button>
    </form>
<hr/>
    <a href="{{ path('product') }}" class="btn">
        <li class="icon-backward"></li> {% trans %}core.Back to the list{% endtrans %}
    </a>
{% endblock %}
