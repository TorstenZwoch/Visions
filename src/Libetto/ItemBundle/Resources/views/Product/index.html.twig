{% extends '::base.html.twig' %}

{% block body -%}
<h1>{% trans %}ItemBundle.Product.List{% endtrans %}</h1>

<table class="records_list table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th> </th>
                <th>{% trans %}ItemBundle.Product.Number{% endtrans %}</th>
                <th>{% trans %}ItemBundle.Product.Name{% endtrans %}</th>
                <th>{% trans %}ItemBundle.Product.ShortName{% endtrans %}</th>
                <th>{% trans %}ItemBundle.Product.Description{% endtrans %}</th>
                <th>{% trans %}ItemBundle.Product.Category{% endtrans %}</th>
                <th>{% trans %}ItemBundle.Product.Group{% endtrans %}</th>
                <th> </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}"><i class="icon-zoom-in"></i></a></td>
                <td>{{ entity.cNumber }}</td>
                <td>{{ entity.cName }}</td>
                <td>{{ entity.cShortName }}</td>
                <td>{{ entity.cDescription }}</td>
                <td>{{ entity.rCategory }}</td>
                <td>{{ entity.rProductGroup }}</td>
                <td><a href="{{ path('product_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i class="icon-edit"></i></a></td>
                <td><a href="{{ path('product_delete', { 'id': entity.id }) }}" class="btn btn-primary"><i class="icon-remove"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br />
    <a href="{{ path('product_new') }}" class="btn btn-success">
        <i class="icon-plus"></i>
        {% trans %}ItemBundle.Product.Create{% endtrans %}
    </a>
    {% endblock %}
