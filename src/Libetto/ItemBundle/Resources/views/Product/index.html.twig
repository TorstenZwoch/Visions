{% extends '::base.html.twig' %}
{% block title %}{% trans %}item.product.title.List{% endtrans %}{% endblock title  %}
{% block body -%}
<h1>{% trans %}item.product.title.List{% endtrans %}</h1>

<table class="records_list table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th> </th>
            <th>{% trans %}item.product.label.Number{% endtrans %}</th>
            <th>{% trans %}item.product.label.Name{% endtrans %}</th>
            <th>{% trans %}item.product.label.ShortName{% endtrans %}</th>
            <th>{% trans %}item.product.label.Description{% endtrans %}</th>
            <th>{% trans %}item.product.label.Category{% endtrans %}</th>
            <th>{% trans %}item.product.label.Group{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('product_show', { 'id': entity.id }) }}" class="btn btn-primary"><i class="icon-zoom-in"></i></a>
                    <!--<a href="{{ path('product_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-edit"></i></a>-->
                    <!--<a href="{{ path('product_delete', { 'id': entity.id }) }}" class="btn btn-danger"><i class="icon-remove"></i></a>-->
                </td>
                <td>{{ entity.cNumber }}</td>
                <td>{{ entity.cName }}</td>
                <td>{{ entity.cShortName }}</td>
                <td>{{ entity.cDescription }}</td>
                <td>{{ entity.rCategory }}</td>
                <td>{{ entity.rProductGroup }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('product_new') }}" class="btn btn-success">
        <li class="icon-plus"></li>
        {% trans %}item.product.action.Create{% endtrans %}
    </a>
    {% endblock %}
