{% extends '::base.html.twig' %}
{% block title %}{% trans %}item.producttext.title.Creation{% endtrans %}{% endblock title  %}
{% block body -%}

<h1>{% trans %}item.producttext.title.Creation{% endtrans %}</h1>

<form action="{{ path('producttext_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-success">
            <li class="icon-save"></li> {% trans %}item.producttext.action.Save{% endtrans %}
        </button>
    </form>
    <hr/>
    <a href="{{ path('producttext', {'productid':entity.rProduct}) }}" class="btn">
        <li class="icon-backward"></li> {% trans %}core.Back to the list{% endtrans %}
    </a>
{% endblock %}
