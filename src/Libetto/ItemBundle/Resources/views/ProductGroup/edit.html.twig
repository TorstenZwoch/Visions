{% extends '::base.html.twig' %}
{% block title %}{{ entity }}{% endblock title  %}
{% block body -%}
<h1>{% trans %}item.productgroup.title.Edit{% endtrans %}: {{ entity }}</h1>

<form action="{{ path('productgroup_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}

    <button type="submit" class="btn btn-success">
        <li class="icon-save"></li> {% trans %}item.productgroup.action.Save{% endtrans %}
    </button>
</form>
<hr/>
<form action="{{ path('productgroup_delete', { 'id': entity.id }) }}" method="post">
    <input type="hidden" name="_method" value="DELETE" />{{ form_widget(delete_form) }}
    <button type="submit" class="btn btn-danger">
        <li class="icon-remove"></li> {% trans %}item.productgroup.action.Delete{% endtrans %}
    </button>
</form>

<a href="{{ path('productgroup') }}" class="btn">
    <li class="icon-backward"></li> {% trans %}core.Back to the list{% endtrans %}
</a>
{% endblock %}
