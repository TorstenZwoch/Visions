{% extends '::base.html.twig' %}

{% block title %}{% trans %}item.productgroup.title.List{% endtrans %}{% endblock title  %}

{% block body -%}
<h1>{% trans %}item.productgroup.title.List{% endtrans %}</h1>

<table class="records_list table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>{% trans %}item.productgroup.label.Number{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.Name{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.Sort{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.IsSalesDiscountable{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.IsCashDiscountable{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.TaxId{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.DecimalPlacePrice{% endtrans %}</th>
            <th>{% trans %}item.productgroup.label.DecimalPlaceQuantity{% endtrans %}</th>

        </tr>
    </thead>
    <tbody>
        {% for entity in entities %}
            <tr>               
                <td>
                    <a href="{{ path('productgroup_show', { 'id': entity.id }) }}" class="btn btn-primary"><i class="icon-zoom-in"></i></a>
                    <!--<a href="{{ path('productgroup_edit', { 'id': entity.id }) }}" class="btn btn-warning"><i class="icon-edit"></i></a>-->
                    <!--<a href="{{ path('productgroup_delete', { 'id': entity.id }) }}" class="btn btn-danger"><i class="icon-remove"></i></a>-->
                </td>
                <td>{{ entity.cNumber }}</td>
                <td>{{ entity.cName }}</td>
                <td>{{ entity.cSort }}</td>
                <td><input type="checkbox" disabled="true" {% if entity.cIsSalesDiscountable == 1 %} checked {% endif %}></td>
                <td><input type="checkbox" disabled="true" {% if entity.cIsCashDiscountable == 1 %} checked {% endif %}></td>
                <td>{{ entity.rTaxId }}</td>
                <td>{{ entity.cDecimalPlacePrice }}</td>
                <td>{{ entity.cDecimalPlaceQuantity }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('productgroup_new') }}" class="btn btn-success">
        <li class="icon-plus"></li>
        {% trans %}item.productgroup.action.Create{% endtrans %}
    </a>

{% endblock %}
