{% extends '::base.html.twig' %}

{% block body -%}
<h1>Customer edit</h1>

<form action="{{ path('customer_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <input type="hidden" name="_method" value="PUT" />
            {{ form_start(edit_form) }}
                {{ form_errors(edit_form) }}

                {{ form_row(edit_form.cNumber) }}
                {{ form_row(edit_form.cInfo) }}    
    
                {{ form_row(edit_form.invoiceContact) }}
                {{ form_row(edit_form.rContactGroup) }}
                {{ form_row(edit_form.rTermsOfPayment) }}
                {{ form_row(edit_form.rPricelist) }}
    
                <input type="submit" />
            {{ form_end(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('customer') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('customer_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
